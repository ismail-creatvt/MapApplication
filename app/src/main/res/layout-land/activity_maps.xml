<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        app:cardElevation="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/trackedBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_centerInParent="true"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/get_track"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleY="1.5"
                    android:scaleX="1.5"
                    android:background="@android:color/transparent"
                    android:src="@drawable/get_tracked_details" />
                <TextView
                    android:id="@+id/trackedName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ismail Shaikh"
                    android:maxLength="8"
                    android:paddingLeft="20dp"
                    android:textSize="25sp"
                    android:layout_marginRight="10dp"/>
                <ImageButton
                    android:id="@+id/edit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/edit_icon"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    />
            </LinearLayout>
            <android.support.v7.widget.SwitchCompat
                android:id="@+id/swhStartStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:padding="20dp"
                android:textOn="Start"
                android:textOff="Stop"
                android:checked="true"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/trackedBar"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>